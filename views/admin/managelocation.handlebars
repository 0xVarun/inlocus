<div class="container-fluid">
    <div class="row margin-top">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header">
                    <div class="float-left">Locations</div>
                    <div class="float-right">
                        <a href="/admin/location/create"><i class="fas fa-plus fa-lg"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <table id="locations" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Sr No</th>
                            <th class="th-sm text-center">Name</th>
                            <th class="th-sm text-center">Type</th>
                            <th class="th-sm text-center">Latitude</th>
                            <th class="th-sm text-center">Longitude</th>
                            <th class="th-sm text-center">Action</th>
                        </thead>
                        <tbody>
                            {{#each locations}}
                            <tr>
                                <td class="text-center">{{inc @index}}</td>
                                <td class="text-center">{{name}}</td>
                                <td class="text-center">{{type}}</td>
                                <td class="text-center">{{latlng.coordinates.[0]}}</td>
                                <td class="text-center">{{latlng.coordinates.[1]}}</td>
                                <td class="text-center">
                                    <a href="#" class="icon-margin"><i class="fas fa-trash-alt" style="color: #b71c1c"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-header">Manage Location</div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#locations').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>