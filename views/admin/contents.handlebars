<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-xs-12 box-m mb-4">
            <div class="card shadow margin-top">
                <div class="card-header">
                    <div class="float-left">Manage Content</div>
                    <div class="float-right"><a href="/admin/content/create"><i class="fas fa-plus"></i></a></div>
                </div>
                <div class="card-body">
                    <table id="applications" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">Sr No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Content Link</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each contents}}
                                <tr class="text-center">
                                    <td>{{ inc @index}}</td>
                                    <td>{{name}}</td>
                                    <td><a style="color: #007bff;" href="{{url}}">Content Url</a></td>
                                    <td>
                                        {{!-- EDIT --}}
                                        <a style="margin-right: 5px;" href="/admin/content/{{id}}"><i style="color: #077ba5;" class="fas fa-eye"></i></a>
                                        {{!-- END EDIT --}}
                                        {{!-- DELETE --}}
                                        <a style="margin-right: 5px;" href="#"><i style="color: #d32f2f;" class="fas fa-trash-alt"></i></a>
                                        {{!-- END DELETE --}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="card shadow margin-top">
                <div class="card-header">Help</div>
                <div class="card-body text-center">
                    Manage all Applications
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#applications').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>