<div class="container fluid">
    <!-- FOUR BOXES START -->
    <div class="row">
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card shadow border-left-success box-m2 hi-100 pyi-2" style="border-left: #1cc88a 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-success text-uppercase">Total Users</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{total}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-info hi-100 pyi-2 shadow" style="border-left:#41bdcf 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-info text-uppercase">Repeat Users</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{repeatVisitors}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comment fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-warning hi-100 pyi-2 shadow" style="border-left: #4e73df 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-warning text-uppercase">Dwell Time</div>
                            <div class="h5 mb-0 mr-3 card-box-text">40 Minutes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-danger hi-100 pyi-2 shadow" style="border-left: #f6c23e 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-danger text-uppercase">Last Location</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{beacon}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i>
                            {{!-- <i class="fab fa-bluetooth-b fa-2x text-gray-300"></i> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FOUR BOXES END -->

    <div class="row margin-top">
        <div class="col-md-8 col-xs-12 col-sm-12 h-100">
            <div class="card shadow">
                <div class="card-header">User Count</div>
                <div class="card body ">
                    <canvas id="timeline-chart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-xs-12 col-sm-12 d-flex">
            <div class="card shadow w-100">
                <div class="card-header">Operating System</div>
                <div class="card body flex-fill">
                    <canvas id="pie-chart" style="height: 90%;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row margin-top">
        <div class="col-md-8 col-sm-12 col-xs-12">
            <div class="card shadow">
                <div class="card-header">User</div>
                <div class="card-body">
                    <table id="locations" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Sr No</th>
                            <th class="th-sm text-center">DeviceId</th>
                            <th class="th-sm text-center">App</th>
                            <th class="th-sm text-center">InlocusId</th>
                        </thead>
                        <tbody>
                            {{#each apps}}
                            {{#each appusers}}
                            <tr>
								<td class="text-center">{{inc @index}}</td>
								<td class="text-center"><a href="/admin/home/profile/{{deviceId}}">{{device.deviceId}}</a></td>
                                <td class="text-center">{{../name}}</td>
                                <td class="text-center">{{ inlocusId}}</td>
                            </tr>
                            {{/each}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/charts/demo.js"></script>
<script src="/charts/timeline.js"></script>
<script>
$(document).ready(function() {
    $('#locations').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>