<div class="container-fluid">
    <div class="row margin-top">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header">
					<div class="float-left">Campaigns</div>
					<div class="float-right"><a href="/admin/campaigns/create"><i class="fas fa-plus"></i></a></div>
				</div>
                <div class="card-body">
                    <table id="locations" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Name</th>
                            <th class="th-sm text-center">App</th>
                            <th class="th-sm text-center">Start</th>
                            <th class="th-sm text-center">End</th>
							<th class="th-sm text-center">Content</th>
							<th class="th-sm text-center">Action URI</th>
							<th class="th-sm text-center">Action</th>
                        </thead>
                        <tbody>
                            {{#each campaigns}}
                            <tr>
								<td class="text-center">{{name}}</td>
								<td class="text-center">{{application.name}}</td>
                                <td class="text-center">{{start_timestamp}}</td>
                                <td class="text-center">{{end_timestamp}}</td>
                                {{#if contentId}}
								<td class="text-center"><a href="{{content.url}}">Image</a></td>
								{{else}}
                                <td class="text-center">No Content</td>
                                {{/if}}
                                <td class="text-center">{{action}}</td>
                                <td class="text-center">
                                    <a class="icon-margin" href="/admin/campaigns/edit/{{id}}"><i class="fas fa-edit" style="color: #3949ab"></i></a>
                                    <a href="#" class="icon-margin"><i class="fas fa-trash-alt" style="color: #b71c1c"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-header">Manage Location</div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#locations').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>