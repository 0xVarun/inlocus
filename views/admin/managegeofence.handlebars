<div class="container-fluid">
    <div class="row margin-top">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header">
                    <div class="float-left"><b>Geofences</b></div>
                    <div class="float-right"><a href="/admin/geofence/create"><i class="fas fa-plus fa-lg"></i></a></div>
                </div>
                <div class="card-body">
                    <table id="geofences" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Sr No</th>
                            <th class="th-sm text-center">Name</th>
                            <th class="th-sm text-center">Latitude</th>
                            <th class="th-sm text-center">Longitude</th>
                            <th class="th-sm text-center">Radius</th>
                            <th class="th-sm text-center">Action</th>
                        </thead>
                        <tbody>
                            {{#each fences}}
                            <tr>
                                <td class="text-center">{{inc @index}}</td>
                                <td class="text-center">{{name}}</td>
                                <td class="text-center">{{latitude}}</td>
                                <td class="text-center">{{longitude}}</td>
                                <td class="text-center">{{radius}}</td>
                                <td class="text-center">
                                    <a href="/admin/geofence/{{id}}" class="icon-margin"><i class="fas fa-edit" style="color: #3949ab;"></i></a>
                                    <a href="#" class="icon-margin"><i class="fas fa-trash-alt" style="color: #b71c1c;"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-header">Geofences Action</div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#geofences').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>