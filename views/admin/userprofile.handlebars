<div class="container-fluid">
    <!-- FOUR BOXES START -->
    <div class="row">
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card shadow border-left-success box-m2 hi-100 pyi-2" style="border-left: #1cc88a 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-success text-uppercase">Total Sent</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{countSent}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-info hi-100 pyi-2 shadow" style="border-left:#41bdcf 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-info text-uppercase">Total Clicked</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{countClicked}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comment fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-warning hi-100 pyi-2 shadow" style="border-left: #4e73df 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-warning text-uppercase">Notification Sent</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{lastNotif}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 box-m mb-4">
            <div class="card border-left-danger hi-100 pyi-2 shadow" style="border-left: #f6c23e 4px solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col mr-2">
                            <div class="card-text-danger text-uppercase">Notification Clicked</div>
                            <div class="h5 mb-0 mr-3 card-box-text">{{lastNotifc}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FOUR BOXES END -->
    <div class="row margin-top">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <div class="float-left">User Info</div>
                </div>
                <div class="card-body">
                    <b>UserId</b>: {{device.appusers.0.userId}} <br>
                    <b>Make/OS</b>: {{split device.GAID}} <br>
                    <b>Created At</b>: {{locale device.createdAt}} <br>
                    <b>IMEI</b>: {{device.IMEI}}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <div class="float-left">Application Info</div>
                </div>
                <div class="card-body">
                    <b>Application</b>: {{device.appusers.0.application.name}} <br>
                    <b>Category</b>: {{device.appusers.0.application.category}} <br>
                </div>
            </div>
        </div>
    </div>
    <div class="row margin-top">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header">
					<div class="float-left">Location Data</div>
				</div>
                <div class="card-body">
                    <table id="locations" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Sr No</th>
                            <th class="th-sm text-center">Latitude</th>
                            <th class="th-sm text-center">Longitude</th>
                            <th class="th-sm text-center">Address</th>
                            <th class="th-sm text-center">Action</th>
                            <th class="th-sm text-center">Action</th>
                        </thead>
                        <tbody>
                            {{#each location}}
                            <tr>
								<td class="text-center">{{inc @index}}</td>
								<td class="text-center">{{latitude}}</td>
                                <td class="text-center">{{longitude}}</td>
                                <td class="text-center">{{address}}</td>
                                <td class="text-center"><a href="/admin/home/profile/{{../tid}}/{{id}}">View On Map</a>
                                <td class="text-center">{{locale createdAt}}</td>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow">
                <div class="card-header">Actions</div>
            </div>
        </div>
    </div>

    <div class="row margin-top">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header">
                    <div class="float-left">Beacon Data</div>
                </div>
                <div class="card-body">
                    <table id="beacons" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            <th class="th-sm text-center">Sr No</th>
                            <th class="th-sm text-center">Major</th>
                            <th class="th-sm text-center">Minor</th>
                            <th class="th-sm text-center">Timestamp</th>
                        </thead>
                        <tbody>
                            {{#each beacons}}
                            <tr>
                                <td class="text-center">{{inc @index}}</td>
                                <td class="text-center">{{major}}</td>
                                <td class="text-center">{{minor}}</td>
                                <td class="text-center">{{locale createdAt}}</td>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow">
                <div class="card-header">Actions</div>
            </div>
        </div>
    </div>

</div>
<script>
$(document).ready(function() {
    $('#locations').DataTable();
    $('#beacons').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>