<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-xs-12 box-m mb-4">
            <div class="card shadow margin-top">
                <div class="card-header"><a href="/admin/app"><i class="fas fa-chevron-left"></i></a> Create Applications</div>
                <div class="card-body">
                    <form method="POST" action="/admin/app/create">
                        <div class="form-row">
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" id="applicationName" name="applicationName" class="form-control">
                                    <label for="applicationName">Application Name <small>*</small></label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" id="appUrl" name="applicationUrl" class="form-control">
                                    <label for="appUrl">Application URL <small>*</small></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" id="apiKey" name="applicationKey" class="form-control" value="{{keys.apiKey}}" readonly="true">
                                    <label for="apiKey">API Key <small>*</small></label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" id="apiSecret" name="applicationSecret" class="form-control" value="{{keys.uuid}}" readonly="true">
                                    <label for="apiSecret">API Secret <small>*</small></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label for="appCategory">Category <small>*</small></label>
                                <select name="applcationCategory" id="appCategory" class="browser-default custom-select">
                                    <option value="">Choose a category</option>
                                    <option value="Books">Books</option>
                                    <option value="Business">Business</option>
                                    <option value="Catalogs">Catalogs</option>
                                    <option value="Education">Education</option>
                                    <option value="Entertainment">Entertainment</option>
                                    <option value="Finance">Finance</option>
                                    <option value="Food &amp; Drink">Food &amp; Drink</option>
                                    <option value="Games">Games</option>
                                    <option value="Health &amp; Fitness">Health &amp; Fitness</option>
                                    <option value="Lifestyle">Lifestyle</option>
                                    <option value="Medical">Medical</option>
                                    <option value="Music">Music</option>
                                    <option value="Navigation">Navigation</option>
                                    <option value="News">News</option>
                                    <option value="Photo &amp; Video">Photo &amp; Video</option>
                                    <option value="Productivity">Productivity</option>
                                    <option value="Reference">Reference</option>
                                    <option value="Social Networking">Social Networking</option>
                                    <option value="Sports">Sports</option>
                                    <option value="Other">Other</option><option value="Travel">Travel</option>
                                    <option value="Utilities">Utilities</option>
                                    <option value="Weather">Weather</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="beaconStatus">Production Status <small>*</small></label>
                                <select name="applicationStatus" id="beaconStatus" class="browser-default custom-select">
                                    <option value="development">Development</option>
                                    <option value="production">Production</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-info my-4 btn-block float-md-right" type="submit">Submit for Approval</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="card shadow margin-top">
                <div class="card-header">Applications Creation Help</div>
                <div class="card-body text-center">
                    
                </div>
            </div>
        </div>
    </div>
</div>