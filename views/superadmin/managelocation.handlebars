<div class="container-fluid">
    <div class="row margin-top">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header">Locations</div>
                <div class="card-body">
                    <table id="locations" class="table table-striped table-bordered table-sm bs-select">
                        <thead>
                            {{!-- <th class="th-sm text-center">Sr No</th> --}}
                            <th class="th-sm text-center">Name</th>
                            <th class="th-sm text-center">Type</th>
                            <th class="th-sm text-center">Public</th>
                            <th class="th-sm text-center">User</th>
                            <th class="th-sm text-center">Action</th>
                        </thead>
                        <tbody>
                            {{#each locations}}
                            <tr>
                                {{!-- <td class="text-center">{{inc @index}}</td> --}}
                                <td class="text-center">{{name}}</td>
                                <td class="text-center">{{type}}</td>
                                {{#if user.role.superadmin}}
                                <td class="text-center">YES</td>
                                {{else}}
                                <td class="text-center">NO</td>
                                {{/if}}
                                <td class="text-center">{{user.username}}</td>                                
                                <td class="text-center">
                                    <a class="icon-margin" href="/admin/home/location/{{id}}"><i class="fas fa-edit" style="color: #3949ab"></i></a>
                                    <a href="#" class="icon-margin"><i class="fas fa-trash-alt" style="color: #b71c1c"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-header">Manage Location</div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#locations').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>