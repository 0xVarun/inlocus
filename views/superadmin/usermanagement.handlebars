<div class="container-fluid">
    <div class="row margin-top">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header">
                  <div class="float-left">Admin Users</div>
                  <div class="float-right"><a href="/admin/home/users/add"><i class="fas fa-plus fa-lg"></i></a></div>
                </div>
                <div class="card-body">
                    <table id="users" class="table table-striped table-bordered table-sm bs-select" >
                        <thead>
                            <tr>
                                <th class="th-sm text-center">Sr No</th>
                                <th class="th-sm text-center">Name</th>
                                <th class="th-sm text-center">Email</th>
                                <th class="th-sm text-center">Active</th>
                                <th class="th-sm text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each adminuser}}
                            <tr>
                                <td class="text-center">{{inc @index}}</td>
                                <td class="text-center"><b>{{name}}</b></td>
                                <td class="text-center">{{email}}</td>
                                <td class="text-center">
                                  {{#if role.active}}
                                  <i style="color: #388E3C" class="fas fa-circle"></i>
                                  {{else}}
                                  <i style="color: #d32f2f" class="fas fa-circle"></i>
                                  {{/if}}
                                </td>
                                <td class="text-center">
                                  <a class="icon-margin" href="/admin/home/users/edit/{{id}}"><i class="fas fa-edit" style="color: #3949ab;"></i></a>
                                  {{#if role.active}}
                                  <a class="icon-margin" href="/admin/api/user/deactivate/{{id}}"><i class="fas fa-eye" style="color: #d32f2f"></i></a>
                                  {{else}}
                                  <a class="icon-margin" href="/admin/api/user/activate/{{id}}"><i class="fas fa-eye" style="color: #388E3C;"></i></a>
                                  {{/if}}
                                  <a class="icon-margin" href="#"><i class="fas fa-trash-alt"  style="color: #b71c1c;"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-12 col-sm-12">
            <div class="card shadow">
                <div class="card-header">Admin User Action</div>
            </div>
        </div>
    </div>

  <div class="row margin-top">
    <div class="col-md-9">
      <div class="card shadow">
        <div class="card-header">Staff Users</div>
        <div class="card-body">
          <table id="susers" class="table table-striped table-bordered table-sm bs-select">
            <thead>
              <tr>
                  <th class="th-sm text-center">Sr No</th>
                  <th class="th-sm text-center">Name</th>
                  <th class="th-sm text-center">Email</th>
                  <th class="th-sm text-center">Active</th>
                  <th class="th-sm text-center">Action</th>
              </tr>
          </thead>
          <tbody>
              {{#each staff}}
              <tr>
                  <td class="text-center">{{inc @index}}</td>
                  <td class="text-center"><b>{{name}}</b></td>
                  <td class="text-center">{{email}}</td>
                  <td class="text-center">
                    {{#if role.active}}
                    <i style="color: #388E3C" class="fas fa-circle"></i>
                    {{else}}
                    <i style="color: #d32f2f" class="fas fa-circle"></i>
                    {{/if}}
                  </td>
                  <td class="text-center">
                    <a class="icon-margin" href="/admin/home/users/edit/{{id}}"><i class="fas fa-edit" style="color: #3949ab;"></i></a>
                    {{#if role.active}}
                    <a class="icon-margin" href="/admin/api/user/deactivate/{{id}}"><i class="fas fa-eye" style="color: #d32f2f"></i></a>
                    {{else}}
                    <a class="icon-margin" href="/admin/api/user/activate/{{id}}"><i class="fas fa-eye" style="color: #388E3C;"></i></a>
                    {{/if}}
                    <a class="icon-margin" href="#"><i class="fas fa-trash-alt" style="color: #b71c1c;"></i></a>
                  </td>
              </tr>
              {{/each}}
          </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-xs-12 col-sm-12">
      <div class="card shadow">
        <div class="card-header">User Action</div>
      </div>
    </div>
  </div>

</div>
<script>
$(document).ready(function() {
    $('#users').DataTable();
     $('#susers').DataTable();
    $('.dataTables_length').addClass('bs-select');
    $('.dataTables_filter input').addClass('form-control');
    $('.dataTables_filter input').addClass('form-control-sm');
    $('.paginate_button').addClass('page-item');
    $('.paginate_button').addClass('active');
});
</script>