<div class="container-fluid">
	<h1 class="h3 mb-2 text-gray-800">Users</h1>
	<p class="mb-4">Staff user list</p>

	{{!-- TABLES --}}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Staff User Tables</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Username</th>
							<th>Activate</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Username</th>
							<th>Activate</th>
							<th>Delete</th>
						</tr>
					</tfoot>
					<tbody>
						{{#each staffusers}}
							<tr>
								<td>{{name}}</td>
								<td>{{email}}</td>
								<td>{{username}}</td>
								{{#if active}}
									<td class="text-center">
										<a href="/admin/api/user/staff/rm/{{id}}" class="btn btn-success btn-circle">
											<i class="fas fa-check"></i>
										</a>
									</td>
								{{else}}
									<td class="text-center">
										<a href="/admin/api/user/staff/mk/{{id}}" class="btn btn-danger btn-circle">
											<i class="fas fa-times"></i>
										</a>
									</td>
								{{/if}}
								<td>
									<a href="/admin/api/user/delete/{{id}}" class="btn btn-danger btn-circle">
										<i class="far fa-trash-alt"></i>
									</a>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>