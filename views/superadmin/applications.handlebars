<div class="container-fluid">
	<h1 class="h3 mb-2 text-gray-800">Application</h1>
	<p class="mb-4">App user list</p>

	{{!-- TABLES --}}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">User Tables</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Name</th>
							<th>API KEY</th>
							<th>API SECRET</th>
							<th>Active</th>
							<th>Campaign Ready</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						{{#each application}}
							<tr>
								<td>{{name}}</td>
								<td>{{API_KEY}}</td>
								<td>{{API_SECRET}}</td>
								{{#if active}}
									<td class="text-center">
										<a href="/admin/api/app/deactivate/{{id}}" class="btn btn-success btn-circle">
											<i class="fas fa-check"></i>
										</a>
									</td>
								{{else}}
									<td class="text-center">
										<a href="/admin/api/app/activate/{{id}}" class="btn btn-danger btn-circle">
											<i class="fas fa-times"></i>
										</a>
									</td>
								{{/if}}
								{{#if cactive}}
									<td class="text-center">
										<a href="/admin/api/app/cdeactivate/{{id}}" class="btn btn-success btn-circle">
											<i class="fas fa-check"></i>
										</a>
									</td>
								{{else}}
									<td class="text-center">
										<a href="/admin/api/app/cactivate/{{id}}" class="btn btn-danger btn-circle">
											<i class="fas fa-times"></i>
										</a>
									</td>
								{{/if}}
								<td>
									<a href="/admin/api/mksu/{{id}}" class="btn btn-danger btn-circle">
										<i class="far fa-trash-alt"></i>
									</a>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>