<div class="container-fluid">
	<h1 class="h3 mb-2 text-gray-800">Locations</h1>

	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Create New Locations</h6>
		</div>
		
		<div class="card-body">
			<form class="user" action="/admin/home/location" method="post">
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" autocomplete="off" class="form-control form-control-user" name="locationname" placeholder="Location Name">
                    </div>	
                    <div class="col-sm-6">
                        <select class="form-control" name="type" id="loctype">
                            <option value="Restaurant">Restaurant</option>
                            <option value="Mall">Mall</option>
                        </select>
                	</div>
                </div>
                <button id="submitBtn" type="submit" class="btn btn-primary btn-user btn-block">Create</button>
            </form>
		</div>
	</div>
</div>